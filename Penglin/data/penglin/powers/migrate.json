{
    "type": "origins:multiple",
    "cold_time":{
		"type": "origins:resource",
		"min": 0,
		"max": 1800,
		"hud_render": {
			"should_render": true,
			"sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_01.png",
			"bar_index": 4
		}
    },
    "cold_timer":{
		"type": "origins:action_over_time",
    	"entity_action": {
        	"type": "origins:if_else",
			"condition": {
				"type": "origins:biome",
   				"condition": {
       				"type": "origins:temperature",
        			"comparison": "<",
        			"compare_to": 0.5
    			}
			},
			"if_action": {
					"type": "origins:change_resource",
					"resource": "penglin:migrate_cold_time",
					"change": 1
			},
			"else_action": {
					"type": "origins:change_resource",
					"resource": "penglin:migrate_cold_time",
					"change": -1
			}
    	},
    	"interval": 20
    },
    "cold_hunger":{
		"type": "origins:action_over_time",
    	"entity_action": {
        	"type": "origins:apply_effect",
 			"effect": {
    			"effect": "minecraft:hunger",
    			"duration": 20,
    			"amplifier": 200
  			}
    	},
    	"interval": 20,
    	"condition":{
    		"type": "origins:resource",
		    "resource": "penglin:migrate_cold_time",
    		"comparison": "==",
    		"compare_to": 1800
    	}
    },
    "hot_time":{
		"type": "origins:resource",
		"min": 0,
		"max": 600,
		"hud_render": {
			"should_render": true,
			"sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_01.png",
			"bar_index": 3
		}
    },
    "hot_timer":{
		"type": "origins:action_over_time",
    	"entity_action": {
        	"type": "origins:if_else",
			"condition": {
				"type": "origins:biome",
   				"condition": {
       				"type": "origins:temperature",
        			"comparison": ">",
        			"compare_to": 0.95
        		}
			},
			"if_action": {
					"type": "origins:change_resource",
					"resource": "penglin:migrate_hot_time",
					"change": 1
			},
			"else_action": {
					"type": "origins:change_resource",
					"resource": "penglin:migrate_hot_time",
					"change": -1
			}
    	},
    	"interval": 20
    },
    "hot_hunger":{
		"type": "origins:action_over_time",
    	"entity_action": {
        	"type": "origins:apply_effect",
 			"effect": {
    			"effect": "minecraft:hunger",
    			"duration": 20,
    			"amplifier": 200
  			}
    	},
    	"interval": 20,
    	"condition":{
    		"type": "origins:resource",
		    "resource": "penglin:migrate_cold_time",
    		"comparison": "==",
    		"compare_to": 600
    	}
    }
}